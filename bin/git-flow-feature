#!/bin/bash

SUBDIRECTORY_OK="yes"

source $(git stats --script-location $0)/git-common

git_get flow.prefix.feature >/dev/null 2>&1 || die "Flow is not using feature branches. Use 'git flow init -f' to reconfigure."
prefix=$(git_get flow.prefix.feature)

start(){
  git_checkout $prefix$1 $DEVELOP_BRANCH;
}

finish(){
  BRANCH=${1:-`git stats --current-branch`}
  git_checkout $DEVELOP_BRANCH && git merge --no-ff $prefix$BRANCH && git_checkout $DEVELOP_BRANCH$BRANCH;
}

push(){
  BRANCH=${1:-`git stats --current-branch`}
  git_checkout $DEVELOP_BRANCH && git push origin $DEVELOP_BRANCH && git branch -d $DEVELOP_BRANCH$BRANCH;
}
